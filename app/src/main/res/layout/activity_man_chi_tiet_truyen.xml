<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManChiTietTruyen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/images_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_1"></ImageView>

        <TextView
            android:id="@+id/name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images_item"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="tên truyện"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/tinhtrang1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_item"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_wifi_24"
            android:text="  Tình trạng"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/tinhtrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_item"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="Tình trạng1"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/tacgia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tinhtrang1"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_emoji_emotions_24"
            android:text="  Tác giả"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/tacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tinhtrang1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="tác giả"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/theloai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tacgia1"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_category_24"
            android:text="  Thể loại"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/theloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tacgia1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="Thể loại"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <Button
            android:id="@+id/doctruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theloai"
            android:layout_marginTop="20dp"
            android:text="Đọc truyện"></Button>

        <Button
            android:id="@+id/theodoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theloai"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="Theo dõi"></Button>

        <TextView
            android:id="@+id/titlencontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theodoi"
            android:drawableLeft="@drawable/ic_baseline_content_paste_24"
            android:text=" NỘI DUNG"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlencontent"
            android:layout_marginTop="20dp"
            android:text="conten..."
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/title_list"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_subject_24"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" DANH SÁCH CHƯƠNG"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_list"
            android:background="#75b3ef"></ListView>

    </RelativeLayout>

</ScrollView>